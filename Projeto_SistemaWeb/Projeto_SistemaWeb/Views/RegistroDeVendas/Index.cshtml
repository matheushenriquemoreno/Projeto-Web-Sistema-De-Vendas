@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples"> <!--pega a ação e chama no controlador-->
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group">
                    <label for="dataMinima" class="col-lg-2 control-label">Data minima</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMinima" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="DataMaxima" class="col-lg-2 control-label">Data maxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataMaxima" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button> <!-- envia a ção pro asp-action="BuscaSimples" -->
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaEmGrupo">
            <fieldset>
                <legend>Busca Em Grupo</legend>
                <div class="form-group">
                    <label for="dataMinima" class="col-lg-2 control-label">Data minima</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataMinima" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="DataMaxima" class="col-lg-2 control-label">Data maxima</label>
                    <div class="col-lg-10">
                        <input type="date" name="DataMaxima" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
