@model Projeto_SistemaWeb.Models.ViewMoldes.SellerFormViewMoldel

@{
    ViewData["Title"]= "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Funcionario</h4>
<hr />

<div class="row">

    <div class="col-md-5">

        <form asp-action="Create">
            <!-- <div asp-validation-summary="All" class="text-danger"></div>   sumario das validações-->
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label"></label> <br />
                <input asp-for="Seller.Name" calss="form-control" />    <br />
                <span asp-validation-for="Seller.Name" class="text-danger"></span> <!-- faz a validação ser mas proxima do nome -->
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label"></label> <br />
                <input asp-for="Seller.Email" calss="form-control" />       <br />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DataNascimento" class="form-control-static"></label> <br />
                <input asp-for="Seller.DataNascimento" calss="form-control" />  <br />
                <span asp-validation-for="Seller.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.SalarioBase" class="form-control-static"></label><br />
                <input asp-for="Seller.SalarioBase" calss="form-control" />   <br />
                <span asp-validation-for="Seller.SalarioBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id", "Name"))" class="form-control"></select>
                <!-- asp-items = controi os intens de uma caixa de seleção conforme os itens que for passado -->
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>  <!-- habilita a validação por meio de JS -->

@section Scripts { 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}