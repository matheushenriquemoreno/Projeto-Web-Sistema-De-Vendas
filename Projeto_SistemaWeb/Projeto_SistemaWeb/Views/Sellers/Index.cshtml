@model IEnumerable<Projeto_SistemaWeb.Models.Seller> 

@{
    ViewData["Title"] = "Vendedores";
}

    <h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Adicionar novo Vendedor</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="active">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr class="success">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioBase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none; color: darkblue">Editar |</a>
                <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none; color: darkblue">Detalhes |</a>
                <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none; color: darkblue ">Excluir </a>
            </td>
        </tr>
      

        }

    </tbody>

</table>



